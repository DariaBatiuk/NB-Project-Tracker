<section class="hero has-background-info is-large is-fullheight is-justify-content-center">
    <form>
        <main class="container">
<div class="card box m-3">

<p class="title has-text-centered">New Post</p>

 <div class="field">
    <label class="label">Select a Repo</label>
    <div class="control">
      <div class="select">
        <select id="repo">
          <option>Option 1</option>
        </select>
      </div>
    </div>
  </div>

 <div class="field">
    <label class="label">Title</label>
    <div class="control">
      <input class="input" id="title" type="text" placeholder="Awesome Project...">
    </div>
  </div>

  <div class="field">
    <label class="label">Description</label>
    <div class="control">
      <textarea class="textarea" id="desc" placeholder="..." style="resize: none;"></textarea>
    </div>
  </div>


<div class="field">
    <label class="label">Skills</label>
    <div class="control">
      <textarea class="textarea" id="skills" placeholder="..." style="resize: none;"></textarea>
    </div>
  </div>


  <div class="field">
    <label class="label">Tags</label>
    <div class="control">
      <input class="input" id="tags" type="text" placeholder="JS">
    </div>
  </div>

  <div class="field">
    <label class="label">Collaborators</label>
    <div class="control">
      <input class="input" id="colab" type="text" placeholder="github username">
    </div>
  </div>


  <div class="field">
    <div class="control has-text-right">
      <button class="button is-link is-medium" id="post">Post</button>
    </div>
  </div>
</div>
</main>
    </form>
</section>
 <script src="/js/addpost.js"></script>